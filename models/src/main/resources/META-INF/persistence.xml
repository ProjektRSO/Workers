<?xml version="1.0" encoding="ISO-8859-1"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
<persistence-unit name="workers-jpa" transaction-type="JTA">
    <jta-data-source>jdbc/workers-jpa</jta-data-source>

    <class>si.fri.rso2021.workers.models.entities.WorkerEntity</class>
    <class>si.fri.rso2021.workers.models.converters.WorkerConverter</class>

    <properties>
        <property name="javax.persistence.schema-generation.database.action" value="none"/>
        <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
        <!-- inicializacijska skripta -->
        <property name="javax.persistence.sql-load-script-source" value="sql-scripts/init-db.sql"/>
        <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
    </properties>
</persistence-unit>
</persistence>
